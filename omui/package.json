{
  "name": "@openmined/omui",
  "description": "The OpenMined UI component system for usage in all our web applications",
  "author": "Patrick Cason <patrick@openmined.org>",
  "license": "Apache-2.0",
  "version": "0.2.5",
  "homepage": "https://omui.openmined.org",
  "bugs": "https://github.com/openmined/omui/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/openmined/omui.git"
  },
  "keywords": [
    "design system",
    "framer",
    "omui",
    "openmined",
    "ui"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "build/index.js",
  "module": "build/index.esm.js",
  "scripts": {
    "start": "yarn storybook:start",
    "storybook:start": "start-storybook -p 3000",
    "storybook:build": "build-storybook -c .storybook -o build-storybook",
    "storybook:deploy": "storybook-to-ghpages --out=build-storybook",
    "build": "parcel build src/index.ts",
    "analyze": "yarn build && source-map-explorer build/index.esm.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "pretty-quick --staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run format"
    }
  },
  "dependencies": {
    "@chakra-ui/core": "1.0.0-rc.7",
    "@chakra-ui/icons": "1.0.0-rc.7",
    "@chakra-ui/system": "1.0.0-rc.7",
    "@chakra-ui/theme": "1.0.0-rc.7",
    "@chakra-ui/theme-tools": "1.0.0-rc.7",
    "framer-motion": "^2.9.5",
    "prism-react-renderer": "^1.1.1",
    "react-simple-code-editor": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.10.4",
    "@parcel/transformer-typescript-tsc": "^2.0.0-beta.1",
    "@storybook/addon-docs": "^6.0.27",
    "@storybook/addon-knobs": "^6.0.27",
    "@storybook/addon-links": "^6.0.27",
    "@storybook/addon-storysource": "^6.0.27",
    "@storybook/addon-viewport": "^6.0.27",
    "@storybook/react": "^6.0.27",
    "@storybook/storybook-deployer": "^2.8.7",
    "@storybook/theming": "^6.0.27",
    "@types/react": "16.9.41",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.0.0",
    "eslint": "7.3.1",
    "eslint-plugin-jest-dom": "^3.0.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "eslint-plugin-testing-library": "^3.3.1",
    "husky": "^4.2.5",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "source-map-explorer": "^2.4.2",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
