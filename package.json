{
  "name": "@openmined/omui",
  "description": "The OpenMined UI component system for usage in all our web applications",
  "license": "Apache-2.0",
  "version": "1.0.0-alpha",
  "homepage": "https://omui.openmined.org",
  "bugs": "https://github.com/openmined/omui/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/openmined/omui.git"
  },
  "keywords": [
    "omui",
    "openmined",
    "ui"
  ],
  "main": "build/index.js",
  "module": "build/index.esm.js",
  "scripts": {
    "build": "parcel build src/index.ts --no-minify",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "pretty-quick --staged",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook",
    "build:tailwind": "postcss src/styles/global.css -o tailwind.css"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run format"
    }
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.0",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@parcel/transformer-typescript-tsc": "^2.0.0-beta.1",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.2.9",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.3.2",
    "@types/classnames": "^2.3.1",
    "@types/react": "16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/tailwindcss": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.1.0",
    "eslint": "^7.25.0",
    "eslint-plugin-jest-dom": "^3.0.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "eslint-plugin-testing-library": "^3.3.1",
    "goober": "^2.0.37",
    "husky": "^4.2.5",
    "parcel": "^2.0.0-beta.1",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "source-map-explorer": "^2.4.2",
    "tailwindcss": "^2.1.2",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5"
  }
}
